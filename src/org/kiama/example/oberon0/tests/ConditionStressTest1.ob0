(* Some complex conditions *)

MODULE CondTest1;
    CONST TWO = 4 DIV 2;

    VAR i, j : INTEGER;

BEGIN

    Read (i);

    WHILE i # 999 DO

        (*  If 0 <= i < 2  *)
        IF ~( (i >= TWO) OR (i < 0) ) THEN

            WriteLn (1)

        ELSE

            WriteLn (2)

        END;

        (*  If i < 0 or i > 2  *)
        IF ~( (i >= 0) & (i <= 2) ) THEN

            WriteLn (3)

        ELSE

            WriteLn (4)

        END;

        Read (i)

    END

END CondTest1.
