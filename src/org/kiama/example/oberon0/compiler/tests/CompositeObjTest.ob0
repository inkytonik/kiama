(* Assigning composite objects, and passing them by value *)

MODULE CompObjTest;

    TYPE RecType1 = RECORD
                fld1 : INTEGER;
                fld2 : ARRAY 2 OF INTEGER
	        END;

    VAR i, j : INTEGER;
        r1, r2 : RecType1;

    PROCEDURE Proc1 (VAR target : RecType1; source : RecType1);
	BEGIN
        WriteLn (source.fld1);
        WriteLn (source.fld2[0]);
        WriteLn (source.fld2[1]);
	    target := source
	END Proc1;

BEGIN

    (* Assigning whole records/arrays *)
    r2.fld1 := 5;
    r2.fld2[0] := 6;
    r2.fld2[1] := 7;

    r1 := r2;

    WriteLn (r1.fld1);
    WriteLn (r1.fld2[0]);
    WriteLn (r1.fld2[1]);

    (* Passing records/arrays to procs by value *)
    r1.fld1 := 11;
    r1.fld2[0] := 12;
    r1.fld2[1] := 13;

    Proc1 (r2, r1);
    WriteLn (r2.fld1);
    WriteLn (r2.fld2[0]);
    WriteLn (r2.fld2[1])

END CompObjTest.
